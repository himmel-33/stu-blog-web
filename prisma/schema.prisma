generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user_tb {
  id        String    @id @default(uuid())
  clerkId   String    @unique
  email     String
  name      String?
  createdAt DateTime  @default(now())
  phone     String?
  posts     post_tb[]
}

model post_tb {
  id        String   @id @default(uuid())
  title     String
  content   String
  imageUrl  String?
  createdAt DateTime @default(now())
  userId    String
  category  String
  user      user_tb  @relation(fields: [userId], references: [id])
}
