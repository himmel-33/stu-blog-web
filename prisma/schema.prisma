generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user_tb {
  id        String   @id @default(uuid())
  clerkId   String   @unique
  email     String   // ← Clerk 이메일 저장용 필드 추가
  name      String?
  createdAt DateTime @default(now())
}